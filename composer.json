{
  "name":             "synetic/patternlab-plugin-faker",
  "description":      "Faker Support for Pattern Lab",
  "keywords":         ["faker", "pattern lab"],
  "homepage":         "http://github.com/syneticnl/patternlab-php-faker",
  "license":          "MIT",
  "type":             "patternlab-plugin",
  "authors": [
    {
      "name":         "Jeffrey Bertoen",
      "email":        "jeffrey@synetic.nl",
      "role":         "Lead Developer"
    }
  ],
  "support": {
    "issues":         "https://github.com/syneticnl/patternlab-php-faker/issues",
    "source":         "https://github.com/syneticnl/patternlab-php-faker/releases"
  },
  "autoload": {
    "psr-0": {
      "PatternLab\\Faker": "src/"
    }
  },
  "require": {
    "php":              ">=5.4",
    "pattern-lab/core": "^2.3.0",
    "fzaninotto/faker": "^1.0.0"
  },
  "extra": {
    "patternlab": {
      "config": {
        "plugins": {
          "faker": {
            "enabled": true,
            "locale": "en_US"
          }
        }
      }
    }
  }
}
